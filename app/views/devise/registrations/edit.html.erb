<h2><%=t :edit%> <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label t(:username) %><br />
    <%= f.text_field :username, class:"form-control ", autofocus: true%>
  </div>
  <div class="form-group">
    <%= f.label t :first_name %><br />
    <%= f.text_field :first_name, class:"form-control "%>
  </div>
  <div class="form-group">
    <%= f.label t :last_name %><br />
    <%= f.text_field :last_name, class:"form-control "%>
  </div>

  <div class="form-group">
    <%= f.label t :email %><br />
    <%= f.email_field :email, autocomplete: "email", class:"form-control " %>
  </div>
  <div class="form-group">
    <%= f.label t :description %><br />
    <%= f.text_area :description , class:"form-control "%>
  </div>

  <div class="form-group">
    <%= f.label t :website %><br />
    <%= f.text_field :website , class:"form-control "%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label t :password %> <i>(<%=t :leave_blank%>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control " %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label t :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control " %>
  </div>

  <div class="form-group">
    <%= f.label t :current_password %> <i>(<%=t :cur_pas_for%>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control " %>
  </div>

  <div class="form-group">
      <%= f.label t :image%>
      <%= f.file_field :image, class: "form-control" %>
      <%= f.hidden_field :image_cache %>
    </div>

  <div class="form-group">
    <%= f.submit t(:update), class: "btn btn-success" %>
    <%= link_to t(:back), :back, class:"btn btn-secondary" %>
  </div>
<% end %>

<hr>
<h3><%=t :delete_account%></h3>


 <p><%= button_to t(:cancel_my_account), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %> 
  </p>


