<%  @follower_suggestions.each do |account| %>
    <div class="recommended-follower">
        <div class="row">
            <div class="col-sm-3 col-lg-2">

                <%= link_to profile_picture(account, 40), profile_url(account.username) %>
            </div>
            <div class="col-sm-9 col-lg-10">
            <%= form_tag follow_account_url, method: :post, class: "float-right" do%>
                <%= hidden_field_tag :follow_id, account.id %>
                <%= submit_tag "Follow", class: "btn btn-info btn-sm" %>
            <% end %>
                <%= link_to account.username, profile_url(account.username), class: "text-black" %> 
               <p class="text-muted"> <%=account.created_at > 2.days.ago ? t(:recently_created) : t(:following_by_smb) %></p>
            </div>
        </div>
    </div>
<% end %>